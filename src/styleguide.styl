@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,600,700')

// typography
typeface = 'Open Sans', sans-serif

// sizes
nav-width = 250px
body-inset = 150px
condensed-body-inset = 60px

// colours
grey = #eee
offblack = #616161
link = #0077CC
link-hover = #0A5999

body
  margin: 0 !important
  padding: 20px body-inset 20px nav-width + body-inset !important
  max-width: 1420px !important
  background: white !important
  @media (max-width: 1140px)
    padding: 20px condensed-body-inset 20px nav-width + condensed-body-inset !important
  @media (max-width: 970px)
    padding: 20px condensed-body-inset 20px condensed-body-inset !important
  @media (max-width: 540px)
    padding: 20px !important

*[class^='-'], *[class*=' -']
  font-family: typeface

.-a
  text-decoration: none
  color: link
  transition: color 0.15s ease-in-out
  &:hover
    color: link-hover

.-nav, sg-nav
  position: fixed
  top: 0
  left: 0
  bottom: 0
  padding-left: 30px
  padding-top: 30px
  width: nav-width
  overflow-y: auto
  margin: 0
  list-style-type: none
  a
    text-decoration: none
    color: black
    padding: 12px 0
    font-size: 14px
    display: block
    transition: all 0.1s ease-in-out
    &:hover
      color: link-hover
      padding-left: 2px
    &:first-child
      font-weight: bold
      font-size: 16px
      border-bottom: 1px solid grey
  @media (max-width: 970px)
    display: none

.-h1, .-h2, .-h3, .-h4, .-h5, .-h6
  font-weight: bold
  color: black !important
  position: relative
  cursor: default
  display: block
  margin: 16px 0
  text-decoration: none
  &:focus
    outline: none
  &[href]
    cursor: pointer
    &:before
      position: absolute
      right: 100%
      top: 0
      padding-right: 0
      opacity: 0
      content: '# '
      transition: all 0.1s ease-in-out
  &:hover:before
    padding-right: 3px
    opacity: 0.3

.-h1
  font-size: 36px
  border-bottom: 1px solid grey
  padding-bottom: 10px

.-h2
  font-size: 28px
  border-bottom: 1px solid grey
  padding-bottom: 10px

.-h3
  font-size: 24px

.-h4
  font-size: 20px

.-h5
  font-size: 16px

.-h6
  font-size: 16px
  color: #444 !important

.-p
  line-height: 1.7
  color: offblack
  font-size: 16px
  margin: 1.2em 0

.-section
  margin-bottom: 180px

.-code, c
  background: grey
  border-radius: 3px
  font-family: monospace
  font-size: 14px
  white-space: pre
  padding: 0 6px
  display: inline-block
  margin: 0 3px
  xmp&, pre&, code&
    padding: 0 10px
    display: block
    margin: 20px 0

.-table
  display: table
  width: 100%
  margin: 20px 0

.-tr
  display: table-row
  &:first-child .-td
    padding-top: 0
  &:last-child .-td
    border-bottom: 0

.-td
  @extend .-p
  display: table-cell
  border-bottom: 1px solid rgba(grey, 0.5)
  padding: 15px
  padding-left: 0
  &:first-child
    min-width: 160px

.-th
  @extend .-td
  font-weight: bold

@media (max-width: 600px)
  .-table, .-tr, .-td
    display: block
    padding: 3px
    padding-left: 0
  .-td
    border-bottom: 0
  .-tr
    border-bottom: 1px solid rgba(grey, 0.5)
  .-th
    display: none

.-swatch
  font-family: typeface
  display: inline-block
  width: 135px
  border-radius: 2px
  padding: 160px 10px 10px 10px
  font-size: 14px
  box-shadow: 0 0 3px rgba(black, 0.2)
  overflow: hidden
  font-weight: bold
  margin: 0 15px 15px 0
  transition: all 0.1s ease-in-out
  position: relative
  &:hover
    box-shadow: 0 6px 6px rgba(black, 0.1)
  &:after
    height: 60px
    margin: -45px -10px -10px -10px
    content: ''
    display: block
    background: white
    border-top: 1px solid grey
