@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,600,700')

typeface = 'Open Sans', sans-serif

body
  margin: 0 !important
  padding: 20px 120px 20px 420px !important
  max-width: 1420px !important
  background: #EEF2F5 !important

.sg-sidebar
  position: fixed
  top: 0px
  left: 0px
  bottom: 0px
  width: 300px
  border-right: 1px solid #ececec
  text-align: center
  overflow-y: auto
  background: #f6f6f6
  font-family: typeface

.sg-logo
  border-bottom: 1px solid #eee
  padding: 50px 70px

.sg-nav
  text-align: left
  overflow-y: auto

.sg-navSection > a
  text-decoration: none
  color: #808080
  padding: 15px 20px
  display: block
  transition: background 0.2s ease-in-out
  &:hover
    background: #ececec
  &:first-child
    display: block
    font-weight: bold
    border-bottom: 1px solid #eee
    padding: 15px 20px
    color: black
    text-decoration: none

.sg-section
  margin-bottom: 180px

.sg-h2, .sg-h3
  position: relative
  cursor: default
  &:focus
    outline: none
  &[href]
    cursor: pointer
    &:before
      position: absolute
      right: 100%
      top: 0
      padding-right: 3px
      opacity: 0
      content: '# '
      transition: opacity 0.1s ease-in-out
  &:hover:before
    opacity: 0.3

.sg-h2
  font-size: 54px
  color: black !important
  display: block
  padding-bottom: 8px
  margin-bottom: 30px
  border-bottom: 1px solid #ddd
  text-decoration: none
  font-family: typeface

.sg-h3
  font-size: 36px
  display: block
  color: black !important
  margin: 30px 0 20px 0
  font-family: typeface
  cursor: default
  text-decoration: none

.sg-code
  background: #e6e6e6
  border-radius: 3px
  font-family: monospace
  font-size: 14px
  white-space: pre
  padding: 0 6px
  display: inline-block
  margin: 0 3px
  xmp&, pre&, code&
    padding: 0 10px
    display: block
    margin: 20px 0

.sg-p
  line-height: 1.7
  font-size: 16px
  margin: 1.2em 0
  font-family: typeface

.sg-swatch
  display: inline-block
  width: 160px
  border-radius: 3px
  padding: 160px 10px 10px 10px
  font-size: 14px
  box-shadow: 0 3px 3px rgba(black, 0.2)
  overflow: hidden
  font-weight: bold
  margin: 0 15px 15px 0
  transition: all 0.1s ease-in-out
  font-family: typeface
  position: relative
  &:hover
    box-shadow: 0 6px 6px rgba(black, 0.1)
  &:after
    height: 60px
    margin: -45px -10px -10px -10px
    content: ''
    display: block
    background: white
    border-top: 1px solid #eee
  &:before
    content: ''
    display: block
    background: white
    background: linear-gradient(to bottom, white, rgba(255,255,255,0))
    position: absolute
    border-radius: 3px
    top: 3px
    left: 3px
    right: 3px
    height: 80px
    opacity: 0.2

.sg-table
  display: table
  width: 100%
  margin: 20px 0

.sg-tr
  display: table-row
  &:first-child .sg-td
    padding-top: 0
  &:last-child .sg-td
    border-bottom: 0

.sg-td
  @extend .sg-p
  display: table-cell
  border-bottom: 1px solid #ddd
  padding: 15px
  padding-left: 0
  &:first-child
    min-width: 160px

.sg-th
  @extend .sg-td
  font-weight: bold
